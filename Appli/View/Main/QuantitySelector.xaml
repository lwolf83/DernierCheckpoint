<UserControl x:Class="WildCircus.QuantitySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WildCircus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Center">
            <Button Width="20" Margin="5" x:Name="MinusButton" Click="MinusButton_Click">-</Button>
            <TextBox Width="25" Margin="5" PreviewTextInput="TextBox_PreviewTextInput" x:Name="Quantity" TextChanged="Quantity_TextChanged"></TextBox>
            <Button Width="20" Margin="5" x:Name="PlusButton" Click="PlusButton_Click">+</Button>
        </StackPanel>
    </Grid>
</UserControl>
